= render 'home/header'
.l-contener
  .mypage
    .mypage_contents
      %h4.profile__title クレジットカード情報入力
      .credit
        .credit__form
          = form_for @credit,url: {action: :create}  do |f|
            .form
              = f.label :card_number, "カード番号"
              %span.form-require 必須
              = f.text_field :card_number, placeholder: "半角英数のみ", class: "form__input"
              %ul.cards
                %li.card
                  = image_tag("credits/visa.svg", alt:"vise", class: "card__mark")
                %li.card
                  = image_tag("credits/master-card.svg", alt:"master-card", class: "card__mark")
                %li.card
                  = image_tag("credits/saison-card.svg", alt:"saison-card", class: "card__mark")
                %li.card
                  = image_tag("credits/jcb.svg", alt:"jcb", class: "card__mark")
                %li.card
                  = image_tag("credits/american_express.svg", alt:"american_express", class: "card__mark", width:21)
                %li.card
                  = image_tag("credits/dinersclub.svg", alt:"dinersclub", class: "card__mark")
                %li.card
                  = image_tag("credits/discover.svg", alt:"discover", class: "card__mark")
            .form
              = f.label [:expiration_monnth, :expiration_year], "有効期限"
              %span.form-require 必須
              %br
              .num_wrap
                .select-wrap
                  = f.select :expiration_month, options_for_select(1..12), {}, { class: "form__select" }
                月
              %br
              .num_wrap
                .select-wrap
                  = f.select :expiration_year,options_for_select(@years), {}, { class: "form__select" }
                年
            .form
              = f.label :security_code, "セキュリティコード"
              %span.form-require 必須
              = f.text_field :security_code, placeholder: "カード背面4桁もしくは3桁の番号", class: "form__input"
              %p.security-code__description
                %span.cricle-mark ?
                カード裏面の番号とは?
              .security-code__image
                %p カードの裏面をご参照ください
                = image_tag("credits/seq-card.png", alt:"カードの裏面説明")
            .actions
              = f.submit "追加する", class: 'btn btn__red'
  = render 'mypages/side_bar'
