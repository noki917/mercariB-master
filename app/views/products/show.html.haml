= render 'home/header'
.bread-crumbs
  .bread-crumbs_box
    - breadcrumb :product
    = breadcrumbs separator: " &rsaquo; "

%section.product-box-container.clearfix
  %h1.product-name
    #{@product.name}
  .product-main-box
    .product-img-box
      .product-img-carousel.slider
        - @images.each do |image|
          .product-img-box-main
            = image_tag image.image, alt:"商品画像"
      .product-img-box-detail.thumb
        - @images.each do |image|
          .box-sub
            = image_tag image.image, alt:"商品画像"
    = render "product-info-table", product: @product
  .price-box
    %h1
      %span.price ¥ #{@product_price}
      %span.tax (税込)
      %span.tax-include 送料込み
    -if @product.buyer_id == nil
      = link_to '購入画面に進む', transaction_path, class: "buy-btn"
    -else
      .btn.btn__soldout 売り切れました
  .product-detail #{@product.info}
  .product-btn.clearfix
    .product-btn-left
      %button.like-btn
        %i.like
        %p.text いいね！
        %p.like-count 13
      =link_to "",class: 'report' do
        %i.flag
        %p.text 不適切な商品の報告
    .product-btn-right
      =link_to "" do
        %i.lock
        %p.text あんしん・あんぜんへの取り組み

= render template: 'comments/index'

%ul.nav-item-link.clearfix
  %li.nav-prev
    =link_to "",class: 'prev' do
      %i.prev-icon
      %p.text ディズニーヴィランズ 2個セット バッジ バッチ Villains 2018
  %li.nav-next
    =link_to "",class: 'next' do
      %p.text バーにかかってきた電話/東 直己
      %i.prev-icon-right

.social-media-box
  %ul.social-media-icons
    %li.social-media-icon
      =link_to "" do
        %i.facebook-icon
    %li.social-media-icon
      =link_to "" do
        %i.twitter-icon
    %li.social-media-icon
      =link_to "" do
        %i.line-icon
    %li.social-media-icon
      =link_to "" do
        %i.pinterest-icon

= render "product_user-item", user: @sell_user, sell_other_products: @sell_other_products, brand: @sell_product_brand, category: @sell_product_category, related_items: @related_items

= render "home/footer"
